{% extends 'base.html.twig' %}

{% block title %}Mon Compte - Keyboard Store{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mon Profil</h1>
    <p>Bienvenue <strong>{{ app.user.firstname }} {{ app.user.lastname }}</strong> , <br> C'est dans cet espace que vous allez pouvoir gérer toutes vos informations.</p>
    <hr>
    {% if is_granted('ROLE_ADMIN') %}
    <div class="row mt-5 justify-content-center">
        <div class="col-md-4">
            <a href="{{ path('admin') }}">
                <div class="account-item text-center bg-danger">
                    <img src="{{ asset('assets/img/account/administrator.png') }}" alt="Modifier mon mot de passe">
                    <p class="text-warning">Admin Dashboard</p> 
                </div>
            </a>
        </div>
    </div>
    {% endif %}
    <div class="row {{ (is_granted('ROLE_ADMIN')) ? '' : 'mt-5' }}">
        <div class="col-md-4">
            <a href="{{ path('app_account_password') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/account/password.png') }}" alt="Modifier mon mot de passe">
                    <p>Modifier mon mot de passe</p> 
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_account_address') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/account/address.png') }}" alt="Gérer mes adresses">
                    <p>Gérer mes adresses</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('app_account_order') }}">
                <div class="account-item text-center">
                    <img src="{{ asset('assets/img/account/purchase.png') }}" alt="Mes commandes">
                    <p>Mes commandes</p>
                </div>
            </a>
        </div>
    </div>
    {# <ul>
        <li><a href="{{ path('app_account_password') }}">Modifier mon mot de passe</a></li>
        <li><a href="{{ path('app_account_address') }}">Mes adresses</a></li>
        <li><a href="{{ path('app_account_order') }}">Mes commandes</a></li>
    </ul> #}
</div>
{% endblock %}
